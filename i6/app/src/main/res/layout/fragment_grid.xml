<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    tools:context="com.is4300.ofishstein.i6.TabbedActivity$GridFragment">

    <Button
        android:id="@+id/statusButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_columnSpan="2"
        android:layout_gravity="fill_horizontal"
        android:text="Set Your Status - Popup Dialog" />

    <TextView
        android:id="@+id/textView"
        android:layout_margin="10dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:layout_columnSpan="2"
        android:text="Roommate Status:" />

    <ImageView
        android:id="@+id/imageView0"
        android:layout_margin="10dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@android:drawable/btn_star_big_on" />

    <TextView
        android:id="@+id/textView0"
        android:layout_margin="10dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:gravity="center_vertical"
        android:text="Connor:\tHome" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:src="@android:drawable/btn_star_big_on" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:layout_margin="10dp"
        android:gravity="center_vertical"
        android:text="Izzi:\tHome" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_margin="10dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@android:drawable/btn_star_big_off" />

    <TextView
        android:id="@+id/textView2"
        android:layout_margin="10dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:gravity="center_vertical"
        android:text="Oli:\tAway" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_margin="10dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@android:drawable/btn_star_big_off" />

    <TextView
        android:id="@+id/textView3"
        android:layout_margin="10dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:gravity="center_vertical"
        android:text="Atamai:\tAway" />

</GridLayout>
